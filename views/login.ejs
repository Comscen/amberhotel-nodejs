<!DOCTYPE html>
<html>

<%- include("partials/header.ejs") %>

<body>

    <%- include("partials/nav.ejs") %>

    <div class="login-clean">
        <form class="border rounded shadow" method="post">
            <div class="illustration"><img src="img/amber-hotel-amber.png" style="width: 100px;"></div>

            <% if (typeof errors != 'undefined') { %>
                <% for (error of errors) { %>
                <div class="alert alert-danger" role="alert"><span><%= error.msg %></span></div>
                <% } %>
            <% } %>

            <div class="form-group"><input class="form-control" type="email" name="email" placeholder="E-mail" required></div>
            <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password" required></div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit" style="background: rgb(224,116,37);">Log In</button></div>

            <a class="register" href="/register">...or register</a>
        </form>
    </div>

    <%- include("partials/footer.ejs") %>
    <%- include("partials/scripts.ejs") %>

</body>

</html>