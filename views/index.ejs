        <% if (typeof hotels != 'undefined') { %>
            <div class="row" style="margin-top: 10px">
                <% for (hotel of hotels) { %>
                    <div class="col-md-6">
                        <div class="card">
                            <% if (typeof hotel.photo != 'undefined') { %>
                                <img class="card-img-top w-100 d-block" alt="" src="<%= hotel.photo %>"/>
                            <% } else { %>
                                <img class="card-img-top w-100 d-block" alt="" src="/img/no_photo.png"/>
                            <% } %>
                            <div class="card-body">
                                <h4 class="card-title"><%= hotel.name %></h4>
                                <p class="card-text"><%= hotel.city %>, <%= hotel.country %></p>
