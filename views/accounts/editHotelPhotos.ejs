<!DOCTYPE html>
<html>

<%- include("../partials/header.ejs") %>

<body>

    <%- include("../partials/nav.ejs") %>

    <div class="container">
        <div class="row">

            <div class="col-md-12">
            <% if (typeof messages != 'undefined') { %>
                <% for (message of messages) { %>
                        <div class="alert alert-success" role="alert" style="margin-top: 16px;"><span><%= message.msg %></span></div>
                    <% } %>
            <% } %>
            </div>
                        
            <div class="col-md-12">
            <% if (typeof errors != 'undefined') { %>
                <% for (error of errors) { %>
                        <div class="alert alert-danger" role="alert" style="margin-top: 16px;"><span><%= error.msg %></span></div>
                <% } %>
            <% } %>
            </div>
            
            <div class="col-md-12 text-center account-info" style="padding-top: 5px; padding-bottom: 5px">
                <div class="card" style="border: 0px">
                    <div class="card-header" style="background-color: white;">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a href="/account/<%= session.userId %>/edit" class="nav-link" style="color: rgb(224,116,37)">Info</a>
                            </li>
                            <li class="nav-item">
                                <a href="/account/<%= user._id %>/edit/password" class="nav-link" style="color: rgb(224,116,37);">Password</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link active" style="border: 1px solid #dee2e6; border-radius: 5%;">Photos</a>
                            </li>
                        </ul>
                    <div class="card-body">
                        <div class="table-responsive text-left">
                            <form method="post">
                                <input type="button" onclick="removePhotoRow()" value="Remove row"  class="btn btn-primary btn-sm float-right" style="background: rgb(224,116,37); margin-right: 5px; border-color: white;">
                                <input type="button" onclick="createPhotoRow()" value="Add row"  class="btn btn-primary btn-sm float-right" style="background: rgb(224,116,37); margin-right: 5px;margin-bottom: 10px; border-color: white;">
                                <table class="table">
                                    <thead>
                                        <tr></tr>
                                    </thead>
                                    <tbody id="photosTable">
                                            <% if (typeof user != 'undefined') { %>
                                                <% for (i in user.photos) { %>
                                                    <tr>
                                                        <td style="width: 250px;">Photo URL</td>
                                                        <td>
                                                            <input name="photos[<%= i %>]" type="text" class="form-control" placeholder="Link to a photo" value="<%= user.photos[i] %>" required>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            <% } %>
                                    </tbody>
                                </table>
                                <input type="submit" value="Save changes"  class="btn btn-primary btn-sm float-right" style="background: rgb(224,116,37);margin-right: 5px; border-color: white; ">
                            </form>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/basicValidation.js" type="application/javascript"></script>
    <script src="/js/hotelPhotos.js" type="application/javascript"></script>

    <%- include("../partials/footer.ejs") %>
    <%- include("../partials/scripts.ejs") %>

</body>

</html>