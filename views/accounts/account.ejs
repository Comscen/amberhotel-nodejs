<!DOCTYPE html>
<html>

<%- include("../partials/header.ejs") %>

<body>

    <%- include("../partials/nav.ejs") %>
    <link rel="stylesheet" href="/css/room-listing.css">

    <div class="container">
            
        <% if (typeof errors != 'undefined') { %>
            <% for (error of errors) { %>
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-danger" role="alert" style="margin-top: 16px;"><span><%= error.msg %></span></div>
                    </div>
                </div>
            <% } %>
        <% } %>
                    
        <% if (typeof user.name != 'undefined') { %>
            <div class="row">
                <div class="col-md-12 text-center account-info">
            
                    <% if (typeof user.photo != 'undefined') { %>
                        <img class="border rounded-circle border-light shadow account-photo" src="<%= user.photo %>">
                    <% } else { %>
                        <img class="border rounded-circle border-light shadow account-photo" src="/img/no_picture.png">
                    <% } %>
            
                    <h3><%= user.name %> <%= user.surname %></h3>

                    <% if (typeof session.logged != 'undefined' && session.userId === user._id) { %>
                        <a class="btn btn-primary btn-sm float-right" href="/account/<%= user._id %>/edit" role="button" style="background: rgb(224,116,37);border-color:white">Edit profile <i class="icon ion-edit"></i></a>
                    <% } %>

                    <div class="table-responsive text-left">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td style="width: 200px;"><i class="icon ion-email"></i> E-mail</i></td>
                                    <td><%= user.email %></td>
                                </tr>
    
                                <!-- Fields for private accounts -->
                                <% if (typeof user.admin != 'undefined') { %>
                                    <tr>
                                        <td><i class="icon ion-person-add"></i> Joined</td>
                                        <td><%= user.joined %></td>
                                    </tr>
    
                                    <% if (typeof user.location != 'undefined') { %>
                                        <tr>
                                            <td><i class="icon ion-android-home"></i> Location</td>
                                            <td><%= user.location %></td>
                                        </tr>
                                    <% } %>
                                <!-- Fields for business accounts -->
                                <% } else {%>
                                    <tr>
                                        <td><i class="icon ion-heart"></i> Rating</i></td>
                                        <td>
                                            <% if (typeof user.rating != 'undefined') { %>
                                                <%= user.rating %>
                                            <% } else { %>
                                                No rating
                                            <% } %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><i class="icon ion-android-globe"></i> City</i></td>
                                        <td><%= user.city %>, <%= user.country %></td>
                                    </tr>

                                    <tr>
                                        <td><i class="icon ion-android-pin"></i> Address</i></td>
                                        <td><%= user.address %>, <%= user.postalCode %></td>
                                    </tr>

                                    <% if (typeof user.webPage != 'undefined') { %>
                                        <tr>
                                            <td><i class="icon ion-ios-world-outline"></i> Homepage</td>
                                            <td><%= user.webPage %></td>
                                        </tr>
                                    <% } %>
                                <% } %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <% if (typeof user.photos != 'undefined' && user.photos.length != 0)  { %>
                    <div class="col-md-12" style="margin-top:30px;">
                        <hr>
                        <h2 style="margin-top: 10px;">Photos <i class="icon ion-android-camera"></i></h2>
                        <div class="carousel slide" data-ride="carousel" id="carousel-1" style="height: 500px;width: 1108px;">
                            <div class="carousel-inner" style="height: 500px;width: 1108px; margin-left: -12px;">
                                <div class="carousel-item active"><img class="w-100 d-block" src="<%= user.photos[0] %>" alt="Slide Image"></div>
                                <% for (let i = 1; i < user.photos.length; i++) { %>
                                    <div class="carousel-item"><img class="w-100 d-block" src="<%= user.photos[i] %>" alt="Slide Image"></div>
                                <% } %>
                            </div>
                            <div>
                                <a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel-1" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
                                <% for (let i = 1; i < user.photos.length; i++) { %>
                                    <li data-target="#carousel-1" data-slide-to="<%= i %>"></li>
                                <% } %>
                            </ol>
                        </div>
                    </div>
                <% } %>

                <div class="row" style="margin-top: 20px">
                    <div class="col-md-12">
                        <% if (typeof rooms != 'undefined') { %>
                        <hr>
                        <h2 style="margin-top: 10px;">Rooms <i class="icon ion-ios-list"></i></h2>
                            <div id="rooms" class="row product-list justify-content-center">
                                <%- include("../partials/roomListing.ejs") %>
                            </div>
                        <% } else if (typeof user.admin == 'undefined') {%>
                            <div class="row">
                                <div class="col-md-12 text-center"><p class="alert" style="font-size: 20px;color:white;background-color: rgb(224,116,37);">This hotel does not have any rooms in our offer <i class="icon ion-sad-outline"></i> </p></div>
                            </div>
                        <% } %>
                    </div>

                    <% if (typeof commentsAboutHotel != 'undefined') { %>
                        <div class="col-md-12">
                            <hr>
                            <h2 style="margin-top: 10px;">Comments <i class="icon ion-chatbubbles"></i></h2>
                            <div class="row">
                                <% for (comment of commentsAboutHotel) { %>
                                    <div class="col-md-12" style="margin-top: 16px;border-style: none;border-color: rgba(255,255,255,0);border-radius: 20px;margin-right: 0px;">
                                        <div class="card" style="margin-bottom: 0px;margin-top: 10px;">
                                            <div class="card-body">
                                                <h4 class="card-title"><%= comment.title %>
                                                    <span class="badge" style="background-color:rgb(224,116,37);color:white">
                                                        <% for (let i = 0; i < parseInt(comment.rating); i++) { %>
                                                            <img src="/img/star.png" style="width: 14px;margin-top: -5px;">
                                                        <% } %>
                                                    </span>
                                                </h4>
                                                <blockquote class="blockquote">
                                                    <p class="mb-0"><%= comment.content %></p>
                                                    <a href="/account/<%= comment.user._id %>"><footer class="blockquote-footer"><%= comment.user.name %> <%= comment.user.surname %></footer></a>
                                                </blockquote>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% } %>

                    <% if (typeof commentsByUser != 'undefined') { %>
                        <div class="col-md-12">
                            <hr>
                            <h2 style="margin-top: 10px;">Comments by this user <i class="icon ion-chatbubbles"></i></h2>
                            <div class="row">
                                <% for (comment of commentsByUser) { %>
                                    <div class="col-md-12" style="margin-top: 16px;border-style: none;border-color: rgba(255,255,255,0);border-radius: 20px;margin-right: 0px;">
                                        <div class="card" style="margin-bottom: 0px;margin-top: 10px;">
                                            <div class="card-body">
                                                <footer class="small-text" style="font-size: 14px;">
                                                    Comment about
                                                    <a href="/account/<%= comment.hotel._id %>">
                                                        <%= comment.hotel.name %>
                                                    </a>
                                                </footer>
                                                <blockquote class="blockquote">
                                                    <h4 class="card-title"><%= comment.title %>
                                                        <span class="badge" style="background-color:rgb(224,116,37);color:white">
                                                            <% for (let i = 0; i < parseInt(comment.rating); i++) { %>
                                                                <img src="/img/star.png" style="width: 14px;margin-top: -5px;">
                                                            <% } %>
                                                        </span>
                                                    </h4>
                                                    <p class="mb-0"><%= comment.content %></p>
                                                </blockquote>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% } %>

                    <% if (typeof commentsAboutUser != 'undefined') { %>
                        <div class="col-md-12">
                            <hr>
                            <h2 style="margin-top: 10px;">Comments about this user <i class="icon ion-chatbubbles"></i></h2>
                            <div class="row">
                                <% for (comment of commentsAboutUser) { %>
                                    <div class="col-md-12" style="margin-top: 16px;border-style: none;border-color: rgba(255,255,255,0);border-radius: 20px;margin-right: 0px;">
                                        <div class="card" style="margin-bottom: 0px;margin-top: 10px;">
                                            <div class="card-body">
                                                <h4 class="card-title"><%= comment.title %></h4>
                                                <blockquote class="blockquote">
                                                    <p class="mb-0"><%= comment.content %></p>
                                                    <a href="/account/<%= comment.user._id %>"><footer class="blockquote-footer"><%= comment.hotel.name %></footer></a>
                                                </blockquote>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% } %>


                </div>
            </div>
            
        <% } %>

    </div>
    

    <%- include("../partials/footer.ejs") %>
    <%- include("../partials/scripts.ejs") %>

</body>

</html>