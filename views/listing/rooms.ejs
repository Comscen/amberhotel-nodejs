<!DOCTYPE html>
<html>

<%- include("../partials/header.ejs") %>

<body>

    <%- include("../partials/nav.ejs") %>
    <link rel="stylesheet" href="/css/room-listing.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="assets/fonts/fontawesome5-overrides.min.css">

    <div class="container" style="margin-top: 40px;">
        <div class="row">
            <div class="col-md-6" style="max-width: 25%;border: 1px solid #dee2e6;border-radius: 16px;padding:20px">
                <h3>Filters</h3>
                <div class="form-group">
                    <label for="hotelName">Hotel name</label>
                    <input type="text" id="hotelName" class="form-control" placeholder="Hotel name">
                </div>

                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" id="city" class="form-control" placeholder="City">
                </div>

                <div class="form-group">
                    <label for="country">Country</label>
                    <select id="country" class="form-control" style="width: 100%;text-align: left;">
                        <option value="Poland">Poland</option>
                        <option value="Germany">Germany</option>
                        <option value="Austria">Austria</option>
                        <option value="France">France</option>
                        <option value="Denmark">Denmark</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="roomName">Room name</label>
                    <input type="text" id="roomName" class="form-control" placeholder="Room name">
                </div>

                <div class="form-group">
                    <label for="beds">Number of beds</label>
                    <input type="number" id="beds" class="form-control" placeholder="Number of beds">
                </div>

                <div class="form-group">
                    <label for="capacity">Number of people</label>
                    <input type="number" id="capacity" class="form-control" placeholder="Number of people">
                </div>

                <div class="form-group">
                    <label for="standard">Room standard</label>
                    <select class="form-control" style="width: 100%;text-align: left;" id="standard" required>
                        <option value="Standard">Standard</option>
                        <option value="Exclusive">Exclusive</option>
                        <option value="Premium">Premium</option>
                        <option value="Deluxe">Deluxe</option>  
                    </select>
                </div>

                <div class="form-group">
                    <output>Minimum rating: 2.5</output>
                    <input type="range" min="0" max="5" step="0.10" id="rating" class="form-control-range" oninput="updateRangeValue(this)" placeholder="Minimum rating">
                </div>

                <div class="form-group">
                    <label for="priceLow">Minimum price in €</label>
                    <input type="number" id="priceLow" class="form-control" placeholder="Minimum price">
                </div>

                <div class="form-group">
                    <label for="priceHigh">Maximum price in €</label>
                    <input type="number" id="priceHigh" class="form-control" placeholder="Maximum price">
                </div>

                <div class="form-group">
                    <button class="btn" style="background-color: rgb(224, 116, 37);color:white;width: 100%; margin-bottom: 10px;" onclick="filterRooms()">Apply</button>
                    <button class="btn" style="background-color: rgb(224, 116, 37);color:white;width: 100%" onclick="resetFilters()">Reset</button>
                </div>
            </div>
            <div class="col-md-6" style="max-width: 75%;">
                <% if (typeof rooms != 'undefined') { %>
                <div id="rooms" class="row product-list" style="width: 1000px;">

                    <%- include("../partials/roomListing.ejs") %>

                </div>
                <% } else { %>
                    <div class="row justify-content-center" style="width: 1000px;">
                        <div class="col-md-12 text-center"><p style="font-size: 20px;">We do not have any rooms in our offer yet <i class="icon ion-sad-outline"></i></p></div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script type="application/javascript" src="/js/roomFilters.js"></script>

    <%- include("../partials/footer.ejs") %>
    <%- include("../partials/scripts.ejs") %>

</body>

</html>