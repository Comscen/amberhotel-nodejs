<!DOCTYPE html>
<html>

<%- include("../partials/header.ejs") %>

<body>

    <%- include("../partials/nav.ejs") %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="assets/fonts/fontawesome5-overrides.min.css">

    <div class="container">
            
        <% if (typeof errors != 'undefined') { %>
            <% for (error of errors) { %>
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-danger" role="alert" style="margin-top: 16px;"><span><%= error.msg %></span></div>
                    </div>
                </div>
            <% } %>
        <% } %>
                    
        <% if (typeof room.name != 'undefined') { %>

            <div class="row" style="margin-top: 30px;">
                <div class="col-md-12 text-center account-info">

                    <h3 style="margin-top: 10px;"><%= room.name %></h3>

                    <div class="row">
                        <div class="col-md-12">
                            <a href="/account/<%= room.hotel._id %>">
                                <div class="row align-items-center justify-content-center">
                                        <% if (typeof room.hotel.photo != 'undefined') { %>
                                            <img class="border rounded-circle border-light shadow account-photo" src="<%= room.hotel.photo %>" style="width: 50px;height: 50px;">
                                        <% } else { %>
                                            <img class="border rounded-circle border-light shadow account-photo" src="/img/no_picture.png" style="width: 50px;height: 50px;">
                                        <% } %>
                                        <h5 style="margin: 0"><%= room.hotel.name %> <span class="badge" style="background-color:rgb(224,116,37);color:white">4.2<img src="/img/star.png" style="width: 14px;margin-top: -5px;"></span></h5>
                                </div>
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-10" style="text-align: center; float: none; margin: 0 auto;">
                            <p><%= room.description %></p>
                        </div>
                    </div>

                    <br>

                    <div class="row">
                        <div class="col-md-12 text-center">
                            <div class="table-responsive text-center">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td><i class="fas fa-bed"></i> Beds</td>
                                            <td><b><%= room.beds %></b></td>
        
                                            <td><i class="fas fa-user"></i> Capacity</td>
                                            <td><b><%= room.capacity %> people</b></td>
        
                                            <td><i class="fas fa-star"></i> Standard</td>
                                            <td><b><%= room.standard %></b></td>
                                        </tr>
                                        <tr>
                                            <td><i class="fas fa-clock"></i> Check in after</td>
                                            <td><b><%= room.checkInOut.checkIn %></b></td>
        
                                            <td><i class="fas fa-clock"></i> Check out before</td>
                                            <td><b><%= room.checkInOut.checkOut %></b></td>

                                            <td><i class="fas fa-money-bill-wave"></i> Price</td>
                                            <td><b>â‚¬<%= room.price %></b> per night</td>
                                        </tr>
                                        <tr><td colspan="6"></td></tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <% for (const [feature, value] of Object.entries(room.features)) { %>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><%= feature %></p>
                                    </div>
                                    <div class="col-md-6">
                                        <% if (value === 'true') { %>
                                            <i class="icon ion-checkmark-circled" style="color: green;"></i>
                                        <% } else { %>
                                            <i class="icon ion-close-circled" style="color: red;"></i>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <hr>
                            <a href="/listing/rooms/<%= room._id %>/book" class="btn" style="background-color: rgb(224,116,37);color:white;width: 75%;">Book now!</a>
                            <hr>
                        </div>
                    </div>

                </div>
            </div>

            <% if (typeof room.photos != 'undefined' && room.photos.length != 0)  { %>
                <div class="col-md-12" style="margin-top:30px;">
                    <div class="carousel slide" data-ride="carousel" id="carousel-1" style="height: 500px;width: 1108px;">
                        <div class="carousel-inner" style="height: 500px;width: 1108px; margin-left: -12px;">
                            <div class="carousel-item active"><img class="w-100 d-block" src="<%= room.photos[0] %>" alt="Slide Image"></div>
                            <% for (let i = 1; i < room.photos.length; i++) { %>
                                <div class="carousel-item"><img class="w-100 d-block" src="<%= room.photos[i] %>" alt="Slide Image"></div>
                            <% } %>
                        </div>
                        <div>
                            <a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel-1" role="button" data-slide="next">
                                <span class="carousel-control-next-icon"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
                            <% for (let i = 1; i < room.photos.length; i++) { %>
                                <li data-target="#carousel-1" data-slide-to="<%= i %>"></li>
                            <% } %>
                        </ol>
                    </div>
                </div>
            <% } %>
            
            <% 
                const months = {
                    0: "January",
                    1: "February",
                    2: "March",
                    3: "April",
                    4: "May",
                    5: "June",
                    6: "July",
                    7: "August",
                    8: "September",
                    9: "October",
                    10: "November",
                    11: "December"
                }
            %>
            <hr>

            <h2 style="margin-top: 10px;">Calendar <i class="icon ion-android-calendar"></i></h2>
                <div class="row" style="margin-top: 10px;">
                <% for (monthData of calendarData) { %>
                    <div class="col-md-3">
                        <div class="card bg-light mb-3" style="height: 310px;">
                            <div class="card-header"><b><%= months[monthData.month] %> <%= monthData.year %></b></div>
                            <div class="card-body">
                                <table style="text-align: center;">
                                    <thead>
                                        <tr style="font-size: 12px;border-bottom: 1px solid #dee2e6;">
                                            <td><i>Mon</i></td>
                                            <td><i>Tue</i></td>
                                            <td><i>Wed</i></td>
                                            <td><i>Thu</i></td>
                                            <td><i>Fri</i></td>
                                            <td><i>Sat</i></td>
                                            <td><i>Sun</i></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (weeks of monthData.monthDays) { %>
                                            <tr>
                                                <% for (day of weeks) { %>
                                                    <td style="width: 40px;border-bottom: 1px solid #dee2e6;">
                                                        <% if (day != 0) { %>
                                                            <% if (monthData.unavailableDays.includes(day)) { %>
                                                                <p style="margin:0px;padding:4px;color:red"><i class="icon ion-close"></i></p>
                                                            <% } else { %>
                                                                <p style="margin:0px;padding:4px;color: green;"><%= day %></p>
                                                            <% } %>
                                                        <% } %>
                                                    </td>
                                                <% } %>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>

        <% } %>

    </div>
    

    <%- include("../partials/footer.ejs") %>
    <%- include("../partials/scripts.ejs") %>

</body>

</html>